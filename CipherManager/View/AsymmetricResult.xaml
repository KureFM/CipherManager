<UserControl 
    x:Class="CipherManager.View.AsymmetricResult" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:bb="clr-namespace:CipherManager.View">
    <StackPanel>
        <TextBlock TextBlock.FontSize="18" TextBlock.Foreground="{DynamicResource HighlightBrush}">Generated Private Cipher:</TextBlock>
        <bb:ByteBox x:Name="privateCipherBox" Margin="0,5,0,0" Split=":" Display="Base64" />
        <TextBlock TextBlock.FontSize="18" Margin="0,15,0,0" TextBlock.Foreground="{DynamicResource HighlightBrush}">Generated Public Cipher:</TextBlock>
        <bb:ByteBox x:Name="publicCipherBox" Margin="0,5,0,0" Split=":" Display="Base64" />
    </StackPanel>
</UserControl>